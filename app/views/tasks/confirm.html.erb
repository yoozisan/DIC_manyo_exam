<h3>以下の内容で、送信する。</h3>
<%= form_with(model: @task, url: tasks_path, local: true) do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :expired_at %>
  <%= form.hidden_field :status_name %>
  <%= form.hidden_field :priority %>

  <div class="field">
    <p><span class="item_name">タイトル:</span> <%= @task.title %></p>
    <p><span class="item_name">内容:</span> <%= @task.content %></p>
    <p><span class="item_name">終了期限:</span> <%= @task.expired_at %></p>
    <p><span class="item_name">ステータス:</span> <%= @task.status_name %></P>
    <p><span class="item_name">優先順位:</span> <%= @task.priority %></P>
  </div>
  <div class="actions">
    <%= form.submit  "登録する" %>
    <%= form.submit "戻る", name: 'back' %>
  </div>
<% end %>
